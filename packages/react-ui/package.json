{
  "name": "@repo/react-ui",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0",
  "author": "iamhoonse-dev",
  "license": "MIT",
  "description": "React design system components built with shadcn/ui, providing a set of reusable UI components and utilities for building modern web applications.",
  "keywords": [
    "react",
    "ui",
    "components"
  ],
  "homepage": "https://github.com/iamhoonse-dev/ecosystem-sample/tree/main/packages/react-ui",
  "bugs": "https://github.com/iamhoonse-dev/ecosystem-sample/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamhoonse-dev/ecosystem-sample.git",
    "directory": "packages/react-ui"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "dev": "tsc -b && vite build --watch",
    "build": "tsc -b && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "preview": "vite preview"
  },
  "exports": {
    "./shadcn-ui": {
      "types": "./dist/base/shadcn-ui/index.d.ts",
      "import": "./dist/base/shadcn-ui/index.es.js",
      "require": "./dist/base/shadcn-ui/index.cjs.js"
    },
    "./utils": {
      "types": "./dist/lib/utils.d.ts",
      "import": "./dist/lib/utils.es.js",
      "require": "./dist/lib/utils.cjs.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.es.js",
      "require": "./dist/components/index.cjs.js"
    },
    "./base.css": "./dist/styles/base.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": ["**/*.css"],
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/vite": "^4.0.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.485.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.17",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/helpers": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@storybook/react": "^8.6.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.23.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "jsdom": "^26.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.7",
    "vite-plugin-dts": "^4.5.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=22"
  }
}
